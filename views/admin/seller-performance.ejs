<style>
  .card {
    transition: transform 0.2s, box-shadow 0.2s;
    border-radius: 0.5rem;
    overflow: hidden;
    border: none;
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  .metric-card {
    position: relative;
    overflow: hidden;
    border-left: 5px solid;
  }
  .metric-card::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    opacity: 0.1;
    z-index: 0;
  }
  .metric-card-sales {
    border-left-color: #4e73df;
  }
  .metric-card-sales::before {
    background-color: #4e73df;
  }
  .metric-card-conversion {
    border-left-color: #1cc88a;
  }
  .metric-card-conversion::before {
    background-color: #1cc88a;
  }
  .metric-card-order {
    border-left-color: #36b9cc;
  }
  .metric-card-order::before {
    background-color: #36b9cc;
  }
  .metric-card-sellers {
    border-left-color: #f6c23e;
  }
  .metric-card-sellers::before {
    background-color: #f6c23e;
  }
  .card-icon {
    opacity: 0.7;
  }
  .table-container {
    border-radius: 0.5rem;
    overflow: hidden;
  }
  .badge-pill {
    border-radius: 20px;
    padding: 5px 10px;
  }
  .progress {
    overflow: hidden;
    border-radius: 10px;
    height: 10px !important;
    box-shadow: inset 0 1px 2px rgba(0,0,0,0.1);
  }
  .progress-bar {
    transition: width 1s ease;
  }
  .seller-search {
    border-radius: 20px;
    padding-left: 30px;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/></svg>');
    background-repeat: no-repeat;
    background-position: 10px center;
    background-size: 14px;
  }
  .insight-card {
    transition: all 0.3s ease;
    border-radius: 0.5rem;
  }
  .insight-card:hover {
    transform: scale(1.02);
  }
  .insight-card .badge {
    position: absolute;
    top: 10px;
    right: 10px;
  }
  .improvement-card {
    border-left: 4px solid #f6c23e;
  }
  .nav-pills .nav-link {
    border-radius: 0.5rem;
    margin-bottom: 5px;
    transition: all 0.2s;
  }
  .nav-pills .nav-link:hover {
    background-color: rgba(78, 115, 223, 0.1);
  }
  .nav-pills .nav-link.active {
    background-color: #4e73df;
  }
  .btn-primary {
    background-color: #4e73df;
    border-color: #4e73df;
  }
  .btn-primary:hover {
    background-color: #3a5bc7;
    border-color: #3a5bc7;
  }
  /* Add custom progress bar styles */
  .performance-progress-excellent {
    background-color: #1cc88a;
    width: 100%;
  }
  .performance-progress-good {
    background-color: #36b9cc;
    width: 100%;
  }
  .performance-progress-average {
    background-color: #f6c23e;
    width: 100%;
  }
</style>

<% 
  // Helper function for progress bar classes 
  function getProgressBarClass(score) {
    if (score >= 80) return 'bg-success';
    if (score >= 60) return 'bg-info';
    return 'bg-warning';
  }
%>

<div id="performanceScoresData" style="display:none;" 
     data-scores="<%= sellerPerformance && sellerPerformance.length > 0 ? 
                    sellerPerformance.map(p => p.performanceScore).join(',') : 
                    '' %>">
</div>

