<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="row g-0">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
            <div class="position-sticky pt-4">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <i class="fas fa-user-shield fa-2x text-light me-2"></i>
                    <h5 class="text-light mb-0">Admin Portal</h5>
                </div>
                
                <div class="nav flex-column px-2">
                    <a href="/admin/dashboard" class="nav-link text-white py-2 my-1">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                    <a href="/admin/users" class="nav-link text-white py-2 my-1">
                        <i class="fas fa-users me-2"></i> Users
                    </a>
                    <a href="/admin/gallery" class="nav-link text-white py-2 my-1">
                        <i class="fas fa-images me-2"></i> Gallery
                    </a>
                    <a href="/admin/requests" class="nav-link text-white py-2 my-1">
                        <i class="fas fa-paint-brush me-2"></i> Painting Requests
                    </a>
                    <a href="/admin/products" class="nav-link active py-2 my-1">
                        <i class="fas fa-shopping-cart me-2"></i> Products
                    </a>
                    <a href="/admin/orders" class="nav-link text-white py-2 my-1">
                        <i class="fas fa-shopping-bag me-2"></i> Orders
                    </a>
                    <a href="/admin/leads" class="nav-link text-white py-2 my-1">
                        <i class="fas fa-funnel-dollar me-2"></i> Lead Management
                    </a>
                    <a href="/admin/seller-performance" class="nav-link text-white py-2 my-1">
                        <i class="fas fa-chart-line me-2"></i> Seller Performance
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-0">
            <div class="content-wrapper p-4">
                <!-- Indian Culture Banner -->
                <div class="card mb-4 border-0 shadow-sm overflow-hidden">
                    <div class="card-body p-0">
                        <div class="bg-gradient-culture py-3 px-4">
                            <div class="d-flex align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="indian-icon-bg me-3">
                                        <i class="fas fa-om text-white" style="font-size: 22px;"></i>
                                    </div>
                                    <div>
                                        <h4 class="text-white mb-0">Sparklume Art</h4>
                                        <p class="text-white-50 mb-0">Where Indian Culture Meets Modern Innovation</p>
                                    </div>
                                </div>
                                <div class="ms-auto d-none d-md-block">
                                    <div class="d-flex align-items-center">
                                        <div class="indian-pattern me-2"></div>
                                        <div class="indian-pattern me-2"></div>
                                        <div class="indian-pattern"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-3 mb-4 border-bottom">
                    <div>
                        <h1 class="h2 mb-0">Product Management</h1>
                        <p class="text-muted mb-0">Manage products and inventory</p>
                    </div>
                    <a href="/admin/products/add" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Add New Product
                    </a>
                </div>

                <% if(messages.success){ %>
                    <div class="alert alert-success alert-dismissible fade show mb-4">
                        <%= messages.success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if(messages.error){ %>
                    <div class="alert alert-danger alert-dismissible fade show mb-4">
                        <%= messages.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white">
                        <h5 class="mb-0 text-primary"><i class="fas fa-shopping-cart me-2"></i> All Products</h5>
                        <div class="d-flex">
                            <div class="input-group input-group-sm me-2" style="width: 200px;">
                                <input type="text" id="productSearch" class="form-control" placeholder="Search products...">
                            </div>
                            <select id="statusFilter" class="form-select form-select-sm" style="width: 120px;">
                                <option value="">All Status</option>
                                <option value="approved">Approved</option>
                                <option value="pending">Pending</option>
                                <option value="rejected">Rejected</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="productsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Image</th>
                                        <th class="py-3">Title</th>
                                        <th class="py-3">Artist</th>
                                        <th class="py-3">Price</th>
                                        <th class="py-3">Stock</th>
                                        <th class="py-3">Status</th>
                                        <th class="py-3">Seller</th>
                                        <th class="py-3">Added On</th>
                                        <th class="py-3 text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (products && products.length > 0) { %>
                                        <% products.forEach(product => { %>
                                            <tr>
                                                <td class="px-4 py-3">
                                                    <img src="<%= product.image %>" alt="<%= product.title %>" height="60" class="rounded" style="object-fit: cover; width: 60px;">
                                                </td>
                                                <td class="py-3"><strong><%= product.title %></strong></td>
                                                <td class="py-3"><%= product.artistName %></td>
                                                <td class="py-3 text-success">$<%= product.price.toFixed(2) %></td>
                                                <td class="py-3">
                                                    <span class="<%= product.stock < 5 ? 'text-danger' : 'text-dark' %>">
                                                        <%= product.stock %>
                                                    </span>
                                                </td>
                                                <td class="py-3">
                                                    <span class="badge <%= product.status === 'approved' ? 'bg-success' : (product.status === 'rejected' ? 'bg-danger' : 'bg-warning') %>">
                                                        <%= product.status.charAt(0).toUpperCase() + product.status.slice(1) %>
                                                    </span>
                                                </td>
                                                <td class="py-3"><%= product.seller ? product.seller.name : 'Admin' %></td>
                                                <td class="py-3"><%= new Date(product.createdAt).toLocaleDateString() %></td>
                                                <td class="py-3 text-end pe-4">
                                                    <a href="/admin/products/<%= product._id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/admin/products/<%= product._id %>/edit" class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= product._id %>">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                    
                                                    <!-- Delete Modal -->
                                                    <div class="modal fade" id="deleteModal<%= product._id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content border-0 shadow">
                                                                <div class="modal-header bg-danger text-white">
                                                                    <h5 class="modal-title" id="deleteModalLabel">
                                                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                                                        Confirm Delete
                                                                    </h5>
                                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body p-4">
                                                                    <p class="mb-0">Are you sure you want to delete the product "<strong><%= product.title %></strong>"?</p>
                                                                    <p class="text-danger small mt-2 mb-0">This action cannot be undone.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <form action="/admin/products/<%= product._id %>/delete" method="POST" class="d-inline">
                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="9" class="text-center py-4">
                                                <div class="py-3">
                                                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                                    <p class="mb-0">No products found</p>
                                                    <a href="/admin/products/add" class="btn btn-sm btn-primary mt-2">
                                                        <i class="fas fa-plus me-1"></i> Add Product
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <!-- Footer -->
                <footer class="mt-5 pb-3 text-center">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="indian-pattern-sm me-3"></div>
                        <p class="text-muted mb-0">Â© 2023 Sparklume Art | Where Indian Culture Meets Modern Innovation</p>
                        <div class="indian-pattern-sm ms-3"></div>
                    </div>
                </footer>
            </div>
        </main>
    </div>
</div>

<style>
