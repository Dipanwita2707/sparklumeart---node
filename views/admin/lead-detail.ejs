<script>
  // Add event listener for analysis modal
  document.addEventListener('DOMContentLoaded', function() {
    if (document.querySelector('a[data-bs-target="#analysisModal"]')) {
      document.querySelector('a[data-bs-target="#analysisModal"]').addEventListener('click', function() {
        const leadId = '<%= lead._id %>';
        const spinner = document.getElementById('analysisSpinner');
        const analysisContent = document.getElementById('analysisContent');
        
        analysisContent.style.display = 'none';
        spinner.style.display = 'block';
        
        // Fetch analysis data from the backend
        fetch(`/admin/leads/${leadId}/analysis`)
          .then(response => response.json())
          .then(data => {
            // Update progress bars
            document.getElementById('engagementScore').style.width = data.engagementScore + '%';
            document.getElementById('engagementScore').setAttribute('aria-valuenow', data.engagementScore);
            document.getElementById('engagementScore').textContent = data.engagementScore + '%';
            
            document.getElementById('conversionLikelihood').style.width = data.conversionLikelihood + '%';
            document.getElementById('conversionLikelihood').setAttribute('aria-valuenow', data.conversionLikelihood);
            document.getElementById('conversionLikelihood').textContent = data.conversionLikelihood + '%';
            
            // Display insights
            const insightsDiv = document.getElementById('engagementInsights');
            insightsDiv.innerHTML = `
              <div class="alert alert-info">
                <h6><i class="fas fa-chart-line me-2"></i>AI-Generated Insights</h6>
                <p>${data.insights}</p>
              </div>
            `;
            
            // Display recommendations
            const recommendationsList = document.getElementById('recommendationsList');
            recommendationsList.innerHTML = '';
            
            data.recommendations.forEach(rec => {
              const li = document.createElement('li');
              li.className = 'list-group-item d-flex justify-content-between align-items-center';
              li.innerHTML = `
                <span>${rec.text}</span>
                <span class="badge bg-${rec.priority === 'high' ? 'danger' : rec.priority === 'medium' ? 'warning' : 'info'}">${rec.priority}</span>
              `;
              recommendationsList.appendChild(li);
            });
            
            // Hide spinner and show content
            spinner.style.display = 'none';
            analysisContent.style.display = 'block';
          })
          .catch(error => {
            console.error('Error fetching analysis data:', error);
            alert('Error fetching analysis data. Please try again.');
            spinner.style.display = 'none';
          });
      });
    }
  });
</script>

