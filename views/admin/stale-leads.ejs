<%- include('../partials/header') %>
<%- include('../partials/admin-navbar') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
      <div class="position-sticky pt-3">
        <div class="list-group mb-3">
          <div class="list-group-item active bg-primary">Navigation</div>
          <a href="/admin/dashboard" class="list-group-item list-group-item-action"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a>
          <a href="/admin/users" class="list-group-item list-group-item-action"><i class="fas fa-users me-2"></i> Users</a>
          <a href="/admin/gallery" class="list-group-item list-group-item-action"><i class="fas fa-images me-2"></i> Gallery</a>
          <a href="/admin/requests" class="list-group-item list-group-item-action"><i class="fas fa-paint-brush me-2"></i> Painting Requests</a>
          <a href="/admin/products" class="list-group-item list-group-item-action"><i class="fas fa-shopping-cart me-2"></i> Products</a>
          <a href="/admin/orders" class="list-group-item list-group-item-action"><i class="fas fa-shopping-bag me-2"></i> Orders</a>
          <a href="/admin/psychometric-tests" class="list-group-item list-group-item-action"><i class="fas fa-brain me-2"></i> Psychometric Tests</a>
          <a href="/admin/leads" class="list-group-item list-group-item-action active"><i class="fas fa-funnel-dollar me-2"></i> AI Lead Management</a>
          <a href="/admin/seller-performance" class="list-group-item list-group-item-action"><i class="fas fa-chart-line me-2"></i> Seller Performance</a>
          <a href="/admin/sellers" class="list-group-item list-group-item-action"><i class="fas fa-store me-2"></i> Sellers</a>
        </div>
      </div>
    </nav>
    
    <!-- Main content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Stale Leads (<%= daysThreshold %>+ days)</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="/admin/leads" class="btn btn-sm btn-outline-secondary">Back to Dashboard</a>
            <a href="/admin/leads/all" class="btn btn-sm btn-outline-primary">All Leads</a>
          </div>
          <div class="dropdown">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
              Change Threshold
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <li><a class="dropdown-item" href="/admin/leads/stale/7">7 Days</a></li>
              <li><a class="dropdown-item" href="/admin/leads/stale/14">14 Days</a></li>
              <li><a class="dropdown-item" href="/admin/leads/stale/30">30 Days</a></li>
              <li><a class="dropdown-item" href="/admin/leads/stale/60">60 Days</a></li>
            </ul>
          </div>
        </div>
      </div>

      <% if (locals.success_msg && success_msg !== '') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <% if (locals.error_msg && error_msg !== '') { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <% if (staleLeads.length === 0) { %>
        <div class="alert alert-info" role="alert">
          <i class="fas fa-info-circle me-2"></i> No stale leads found for the selected time period.
        </div>
      <% } else { %>
        <div class="alert alert-warning" role="alert">
          <i class="fas fa-exclamation-triangle me-2"></i> Found <%= staleLeads.length %> leads that have not been contacted in <%= daysThreshold %>+ days.
        </div>
        
        <div class="card shadow mb-4">
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Stale Leads</h6>
            <div class="dropdown no-arrow">
              <button class="btn btn-link btn-sm dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
              </button>
              <div class="dropdown-menu dropdown-menu-end shadow animated--fade-in" aria-labelledby="dropdownMenuButton2">
                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#bulkActionModal">Bulk Actions</a>
                <a class="dropdown-item" href="#" id="exportStaleLeads">Export to CSV</a>
              </div>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped" id="staleLeadsTable">
                <thead>
                  <tr>
                    <th><input type="checkbox" id="selectAll"></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Assigned To</th>
                    <th>Last Contact</th>
                    <th>Last Activity</th>
                    <th>Priority</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% staleLeads.forEach(lead => { %>
                    <tr>
                      <td><input type="checkbox" class="lead-checkbox" value="<%= lead._id %>"></td>
                      <td><%= lead.user ? lead.user.name : 'Unknown' %></td>
                      <td><%= lead.user ? lead.user.email : 'Unknown' %></td>
                      <td>
                        <span class="badge bg-<%= 
                          lead.status === 'converted' ? 'success' : 
                          lead.status === 'contacted' ? 'primary' : 
                          lead.status === 'qualified' ? 'info' : 
                          lead.status === 'proposal' ? 'warning' :
                          lead.status === 'lost' ? 'danger' : 'secondary' 
                        %>">
                          <%= lead.status.toUpperCase() %>
                        </span>
                      </td>
                      <td><%= lead.assignedSeller ? lead.assignedSeller.name : 'Unassigned' %></td>
                      <td><%= lead.lastContact ? new Date(lead.lastContact).toLocaleDateString() : 'Never' %></td>
                      <td>
                        <%= lead.engagementMetrics && lead.engagementMetrics.lastInteraction ? 
                            new Date(lead.engagementMetrics.lastInteraction).toLocaleDateString() : 'Unknown' %>
                      </td>
                      <td>
                        <div class="progress" style="height: 20px;">
                          <div class="progress-bar bg-<%= 
                            lead.priorityScore >= 80 ? 'success' : 
                            lead.priorityScore >= 60 ? 'info' : 
                            lead.priorityScore >= 40 ? 'warning' : 'danger' 
                          %>" 
                               role="progressbar" style="width: <%= lead.priorityScore %>%;" 
                               aria-valuenow="<%= lead.priorityScore %>" aria-valuemin="0" aria-valuemax="100">
                            <%= lead.priorityScore %>%
                          </div>
                        </div>
                      </td>
                      <td>
                        <div class="btn-group">
                          <a href="/admin/leads/<%= lead._id %>" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i>
                          </a>
                          <button type="button" class="btn btn-sm btn-info mark-contacted" data-lead-id="<%= lead._id %>">
                            <i class="fas fa-check"></i>
                          </button>
                          <button type="button" class="btn btn-sm btn-warning schedule-followup" data-lead-id="<%= lead._id %>">
                            <i class="fas fa-calendar-alt"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% } %>
    </main>
  </div>
</div>

<!-- Bulk Action Modal -->
<div class="modal fade" id="bulkActionModal" tabindex="-1" aria-labelledby="bulkActionModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bulkActionModalLabel">Bulk Actions</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Select an action to apply to all selected leads:</p>
        <form id="bulkActionForm" method="POST" action="/admin/leads/bulk-action">
          <input type="hidden" id="selectedLeads" name="selectedLeads" value="">
          <div class="mb-3">
            <select class="form-select" name="bulkAction" required>
              <option value="" selected disabled>Select an action</option>
              <option value="mark_contacted">Mark as Contacted</option>
              <option value="schedule_followup">Schedule Follow-up</option>
              <option value="change_status">Change Status</option>
              <option value="assign_seller">Assign to Seller</option>
            </select>
          </div>
          
          <!-- Dynamic fields will appear here based on selected action -->
          <div id="dynamicFields"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="applyBulkAction">Apply</button>
      </div>
    </div>
  </div>
</div>

<!-- Follow-up Modal -->
<div class="modal fade" id="followUpModal" tabindex="-1" aria-labelledby="followUpModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="followUpModalLabel">Schedule Follow-up</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="followUpForm" method="POST">
          <div class="mb-3">
            <label for="followUpDate" class="form-label">Follow-up Date</label>
            <input type="datetime-local" class="form-control" id="followUpDate" name="followUpDate" required>
          </div>
          <div class="mb-3">
            <label for="reminderType" class="form-label">Reminder Type</label>
            <select class="form-select" id="reminderType" name="reminderType">
              <option value="notification">In-App Notification</option>
              <option value="email">Email</option>
              <option value="sms">SMS</option>
              <option value="all">All Methods</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="followUpNote" class="form-label">Note (Optional)</label>
            <textarea class="form-control" id="followUpNote" name="note" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveFollowUp">Schedule</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Select all checkbox
    document.getElementById('selectAll').addEventListener('change', function() {
      const checkboxes = document.querySelectorAll('.lead-checkbox');
      checkboxes.forEach(checkbox => checkbox.checked = this.checked);
    });
    
    // Bulk action form submission
    document.getElementById('applyBulkAction').addEventListener('click', function() {
      const selectedLeads = Array.from(document.querySelectorAll('.lead-checkbox:checked'))
        .map(checkbox => checkbox.value);
        
      if (selectedLeads.length === 0) {
        alert('Please select at least one lead');
        return;
      }
      
      document.getElementById('selectedLeads').value = JSON.stringify(selectedLeads);
      document.getElementById('bulkActionForm').submit();
    });
    
    // Follow-up modal
    const followUpButtons = document.querySelectorAll('.schedule-followup');
    followUpButtons.forEach(button => {
      button.addEventListener('click', function() {
        const leadId = this.getAttribute('data-lead-id');
        document.getElementById('followUpForm').action = `/admin/leads/${leadId}/follow-up`;
        
        // Set default date to tomorrow at 10 AM
        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        tomorrow.setHours(10, 0, 0, 0);
        
        const dateInput = document.getElementById('followUpDate');
        dateInput.value = tomorrow.toISOString().substring(0, 16);
        
        const modal = new bootstrap.Modal(document.getElementById('followUpModal'));
        modal.show();
      });
    });
    
    // Save follow-up
    document.getElementById('saveFollowUp').addEventListener('click', function() {
      document.getElementById('followUpForm').submit();
    });
    
    // Mark as contacted
    const markContactedButtons = document.querySelectorAll('.mark-contacted');
    markContactedButtons.forEach(button => {
      button.addEventListener('click', function() {
        const leadId = this.getAttribute('data-lead-id');
        if (confirm('Mark this lead as contacted today?')) {
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = `/admin/leads/${leadId}/mark-contacted`;
          document.body.appendChild(form);
          form.submit();
        }
      });
    });
    
    // Export to CSV
    document.getElementById('exportStaleLeads').addEventListener('click', function() {
      const selectedLeads = Array.from(document.querySelectorAll('.lead-checkbox:checked'))
        .map(checkbox => checkbox.value);
      
      // If none selected, export all
      const url = selectedLeads.length > 0 
        ? `/admin/leads/export?ids=${JSON.stringify(selectedLeads)}` 
        : `/admin/leads/export?filter=stale&days=<%= daysThreshold %>`;
      
      window.location.href = url;
    });
  });
</script>

<%- include('../partials/footer') %> 