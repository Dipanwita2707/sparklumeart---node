    max-width: 1600px;
    margin: 0 auto;
}

.bg-gradient-culture {
    background: linear-gradient(90deg, #FF9933 0%, #138808 100%);
    position: relative;
    overflow: hidden;
}

.indian-icon-bg {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
