                <div class="col-md-6">
                  <h6>Conversion Likelihood</h6>
                  <div class="progress mb-3" style="height: 25px;">
                    <div class="progress-bar bg-info" role="progressbar" id="conversionLikelihood" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                  </div>
                </div>
              </div>
              <div id="engagementInsights" class="mt-3"></div>
            </div>
          </div>
          
          <div class="card mb-3">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0">Recommendations</h5>
