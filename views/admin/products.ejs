    height: 100vh;
    position: sticky;
    top: 0;
}

.sidebar .nav-link {
    font-weight: 500;
    color: rgba(255, 255, 255, 0.75);
    border-left: 3px solid transparent;
    border-radius: 0;
    transition: all 0.2s ease;
