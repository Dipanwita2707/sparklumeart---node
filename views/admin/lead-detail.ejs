<%- include('../partials/header') %>
<%- include('../partials/admin-navbar') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
      <div class="position-sticky pt-3">
        <div class="list-group mb-3">
          <div class="list-group-item active bg-primary">Navigation</div>
          <a href="/admin/dashboard" class="list-group-item list-group-item-action"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a>
          <a href="/admin/users" class="list-group-item list-group-item-action"><i class="fas fa-users me-2"></i> Users</a>
          <a href="/admin/gallery" class="list-group-item list-group-item-action"><i class="fas fa-images me-2"></i> Gallery</a>
          <a href="/admin/requests" class="list-group-item list-group-item-action"><i class="fas fa-paint-brush me-2"></i> Painting Requests</a>
          <a href="/admin/products" class="list-group-item list-group-item-action"><i class="fas fa-shopping-cart me-2"></i> Products</a>
          <a href="/admin/orders" class="list-group-item list-group-item-action"><i class="fas fa-shopping-bag me-2"></i> Orders</a>
          <a href="/admin/psychometric-tests" class="list-group-item list-group-item-action"><i class="fas fa-brain me-2"></i> Psychometric Tests</a>
          <a href="/admin/leads" class="list-group-item list-group-item-action active"><i class="fas fa-funnel-dollar me-2"></i> AI Lead Management</a>
          <a href="/admin/seller-performance" class="list-group-item list-group-item-action"><i class="fas fa-chart-line me-2"></i> Seller Performance</a>
          <a href="/admin/sellers" class="list-group-item list-group-item-action"><i class="fas fa-store me-2"></i> Sellers</a>
        </div>
      </div>
    </nav>
    
    <!-- Main content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Lead Details</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="/admin/leads" class="btn btn-sm btn-outline-secondary">Back to Dashboard</a>
            <a href="/admin/leads/all" class="btn btn-sm btn-outline-primary">All Leads</a>
          </div>
        </div>
      </div>

      <% if (locals.success_msg && success_msg !== '') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <% if (locals.error_msg && error_msg !== '') { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <div class="row">
        <!-- Lead Information -->
        <div class="col-lg-8">
          <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
              <h6 class="m-0 font-weight-bold text-primary">Lead Information</h6>
              <div class="dropdown no-arrow">
                <button class="btn btn-link btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-ellipsis-v"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end shadow animated--fade-in" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#updateStatusModal">Update Status</a>
                  <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#assignSellerModal">Assign Seller</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteLeadModal">Delete Lead</a>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row mb-4">
                <div class="col-lg-6">
                  <h5 class="mb-3">Customer Details</h5>
                  <p><strong>Name:</strong> <%= lead.user ? lead.user.name : 'Unknown' %></p>
                  <p><strong>Email:</strong> <%= lead.user ? lead.user.email : 'Unknown' %></p>
                  <p><strong>Mobile:</strong> <%= lead.user && lead.user.mobileNumber ? lead.user.mobileNumber : 'N/A' %></p>
                  <p><strong>Registered:</strong> <%= lead.user ? new Date(lead.user.createdAt).toLocaleDateString() : 'Unknown' %></p>
                  <p><strong>Orders Placed:</strong> <%= userOrderCount %></p>
                </div>
                <div class="col-lg-6">
                  <h5 class="mb-3">Lead Details</h5>
                  <p>
                    <strong>Source:</strong> 
                    <span class="badge bg-info"><%= lead.source.replace('_', ' ') %></span>
                  </p>
                  <p>
                    <strong>Activity Type:</strong> <%= lead.activityType %>
                  </p>
                  <p>
                    <strong>Created:</strong> <%= new Date(lead.createdAt).toLocaleString() %>
                  </p>
                  <p>
                    <strong>Status:</strong> 
                    <span class="badge bg-<%= 
                      lead.status === 'converted' ? 'success' : 
                      lead.status === 'contacted' ? 'primary' : 
                      lead.status === 'qualified' ? 'info' : 
                      lead.status === 'proposal' ? 'warning' :
                      lead.status === 'lost' ? 'danger' : 'secondary' 
                    %>">
                      <%= lead.status.toUpperCase() %>
                    </span>
                  </p>
                  <p>
                    <strong>Assigned To:</strong> 
                    <% if (lead.assignedSeller) { %>
                      <%= lead.assignedSeller.name %>
                    <% } else { %>
                      <span class="text-muted">Unassigned</span>
                    <% } %>
                  </p>
                </div>
              </div>

              <hr>

              <div class="row">
                <div class="col-lg-12">
                  <h5 class="mb-3">AI Scoring</h5>
                  <div class="row mb-3">
                    <div class="col-lg-4">
                      <p><strong>AI Score:</strong></p>
                      <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-<%= lead.aiScore >= 80 ? 'success' : lead.aiScore >= 60 ? 'info' : 'warning' %>" 
                             role="progressbar" style="width: <%= lead.aiScore %>%;" 
                             aria-valuenow="<%= lead.aiScore %>" aria-valuemin="0" aria-valuemax="100">
                          <%= lead.aiScore %>%
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <p><strong>Interest Level:</strong></p>
                      <span class="badge bg-<%= 
                        lead.interestLevel === 'very_high' ? 'success' : 
                        lead.interestLevel === 'high' ? 'primary' : 
                        lead.interestLevel === 'medium' ? 'info' : 'secondary' 
                      %>" style="font-size: 1rem; padding: 0.5rem 1rem;">
                        <%= lead.interestLevel.replace('_', ' ').toUpperCase() %>
                      </span>
                    </div>
                    <div class="col-lg-4">
                      <p><strong>Conversion Probability:</strong></p>
                      <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-<%= lead.conversionProbability >= 80 ? 'success' : lead.conversionProbability >= 60 ? 'info' : 'warning' %>" 
                             role="progressbar" style="width: <%= lead.conversionProbability %>%;" 
                             aria-valuenow="<%= lead.conversionProbability %>" aria-valuemin="0" aria-valuemax="100">
                          <%= lead.conversionProbability %>%
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <h5 class="mb-3 mt-4">Tags</h5>
                  <div class="mb-3">
                    <% if (lead.tags && lead.tags.length > 0) { %>
                      <% lead.tags.forEach(tag => { %>
                        <span class="badge bg-secondary me-1"><%= tag %></span>
                      <% }); %>
                    <% } else { %>
                      <p class="text-muted">No tags assigned</p>
                    <% } %>
                  </div>

                  <% if (lead.activityData) { %>
                    <h5 class="mb-3 mt-4">Activity Data</h5>
                    <div class="card">
                      <div class="card-body">
                        <pre class="mb-0" style="max-height: 200px; overflow-y: auto;"><%= JSON.stringify(lead.activityData, null, 2) %></pre>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Notes & Follow-ups -->
        <div class="col-lg-4">
          <!-- Notes Section -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Notes</h6>
            </div>
            <div class="card-body">
              <form action="/admin/leads/<%= lead._id %>/notes" method="POST" class="mb-4">
                <div class="mb-3">
                  <textarea class="form-control" name="noteText" rows="3" placeholder="Add a note..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Add Note</button>
              </form>

              <div class="notes-container" style="max-height: 400px; overflow-y: auto;">
                <% if (lead.notes && lead.notes.length > 0) { %>
                  <% lead.notes.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).forEach(note => { %>
                    <div class="card mb-3">
                      <div class="card-body py-2 px-3">
                        <p class="mb-1"><%= note.text %></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <small class="text-muted">
                            <% if (note.addedBy) { %>
                              By <%= note.addedBy.name %>
                            <% } %>
                          </small>
                          <small class="text-muted"><%= new Date(note.createdAt).toLocaleString() %></small>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <p class="text-muted">No notes added yet</p>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Follow-up -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Follow-up</h6>
            </div>
            <div class="card-body">
              <form action="/admin/leads/<%= lead._id %>/follow-up" method="POST">
                <div class="mb-3">
                  <label for="nextFollowUp" class="form-label">Next Follow-up Date</label>
                  <input type="datetime-local" class="form-control" id="nextFollowUp" name="nextFollowUp" 
                         value="<%= lead.nextFollowUp ? new Date(lead.nextFollowUp).toISOString().slice(0, 16) : '' %>">
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">Update Follow-up</button>
                </div>
              </form>
              
              <% if (lead.lastContact) { %>
                <div class="mt-3">
                  <p><strong>Last Contact:</strong> <%= new Date(lead.lastContact).toLocaleString() %></p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Related Information -->
      <div class="row mt-2">
        <div class="col-lg-12">
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Related Information</h6>
            </div>
            <div class="card-body">
              <ul class="nav nav-tabs" id="leadTabs" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab" aria-controls="orders" aria-selected="true">Orders</button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="tests-tab" data-bs-toggle="tab" data-bs-target="#tests" type="button" role="tab" aria-controls="tests" aria-selected="false">Psychometric Tests</button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="requests-tab" data-bs-toggle="tab" data-bs-target="#requests" type="button" role="tab" aria-controls="requests" aria-selected="false">Custom Requests</button>
                </li>
              </ul>
              <div class="tab-content p-3" id="leadTabsContent">
                <div class="tab-pane fade show active" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                  <% if (userOrderCount > 0) { %>
                    <div class="alert alert-info">
                      <i class="fas fa-info-circle me-2"></i> 
                      This user has placed <%= userOrderCount %> order<%= userOrderCount !== 1 ? 's' : '' %>.
                      <a href="/admin/orders?userId=<%= lead.user ? lead.user._id : '' %>" class="btn btn-sm btn-primary ms-2">
                        View Orders
                      </a>
                    </div>
                  <% } else { %>
                    <div class="alert alert-info">No orders found for this user.</div>
                  <% } %>
                </div>
                <div class="tab-pane fade" id="tests" role="tabpanel" aria-labelledby="tests-tab">
                  <% if (userTests && userTests.length > 0) { %>
                    <div class="table-responsive">
                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th>Test ID</th>
                            <th>Date</th>
                            <th>Score</th>
                            <th>Result</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% userTests.forEach(test => { %>
                            <tr>
                              <td><%= test._id %></td>
                              <td><%= new Date(test.createdAt).toLocaleDateString() %></td>
                              <td><%= test.score %></td>
                              <td><%= test.result %></td>
                              <td>
                                <a href="/admin/psychometric-tests/<%= test._id %>" class="btn btn-sm btn-primary">View</a>
                              </td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  <% } else { %>
                    <div class="alert alert-info">No psychometric tests found for this user.</div>
                  <% } %>
                </div>
                <div class="tab-pane fade" id="requests" role="tabpanel" aria-labelledby="requests-tab">
                  <% if (userRequests && userRequests.length > 0) { %>
                    <div class="table-responsive">
                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th>Request ID</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% userRequests.forEach(request => { %>
                            <tr>
                              <td><%= request._id %></td>
                              <td><%= new Date(request.createdAt).toLocaleDateString() %></td>
                              <td><%= request.paintingType %></td>
                              <td>
                                <span class="badge bg-<%= 
                                  request.status === 'completed' ? 'success' : 
                                  request.status === 'in_progress' ? 'info' : 
                                  request.status === 'rejected' ? 'danger' : 'warning' 
                                %>">
                                  <%= request.status.toUpperCase() %>
                                </span>
                              </td>
                              <td>
                                <a href="/admin/requests/<%= request._id %>" class="btn btn-sm btn-primary">View</a>
                              </td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  <% } else { %>
                    <div class="alert alert-info">No custom requests found for this user.</div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Update Status Modal -->
<div class="modal fade" id="updateStatusModal" tabindex="-1" aria-labelledby="updateStatusModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/leads/<%= lead._id %>/status" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="updateStatusModalLabel">Update Lead Status</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="leadStatus" class="form-label">Status</label>
            <select class="form-select" id="leadStatus" name="status">
              <option value="new" <%= lead.status === 'new' ? 'selected' : '' %>>New</option>
              <option value="contacted" <%= lead.status === 'contacted' ? 'selected' : '' %>>Contacted</option>
              <option value="qualified" <%= lead.status === 'qualified' ? 'selected' : '' %>>Qualified</option>
              <option value="proposal" <%= lead.status === 'proposal' ? 'selected' : '' %>>Proposal</option>
              <option value="converted" <%= lead.status === 'converted' ? 'selected' : '' %>>Converted</option>
              <option value="lost" <%= lead.status === 'lost' ? 'selected' : '' %>>Lost</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="statusNote" class="form-label">Add Note (Optional)</label>
            <textarea class="form-control" id="statusNote" name="note" rows="3"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Update Status</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Assign Seller Modal -->
<div class="modal fade" id="assignSellerModal" tabindex="-1" aria-labelledby="assignSellerModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/leads/<%= lead._id %>/assign" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="assignSellerModalLabel">Assign Seller</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="sellerId" class="form-label">Select Seller</label>
            <select class="form-select" id="sellerId" name="sellerId" data-current-seller="<%= lead.assignedSeller ? lead.assignedSeller._id : '' %>">
              <option value="">-- Unassign --</option>
              <% if (typeof sellers !== 'undefined' && sellers && sellers.length > 0) { %>
                <% sellers.forEach(seller => { %>
                  <option value="<%= seller._id %>" <%= lead.assignedSeller && lead.assignedSeller._id.toString() === seller._id.toString() ? 'selected' : '' %>>
                    <%= seller.name %> (<%= seller.email %>)
                  </option>
                <% }); %>
              <% } %>
            </select>
            <div class="mt-2">
              <a href="#" id="loadSellersBtn" class="btn btn-sm btn-secondary">
                <i class="fas fa-sync me-1"></i> Load Sellers
              </a>
            </div>
          </div>
          <div class="mb-3">
            <label for="assignmentNote" class="form-label">Add Note (Optional)</label>
            <textarea class="form-control" id="assignmentNote" name="note" rows="3"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Assign Seller</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Lead Modal -->
<div class="modal fade" id="deleteLeadModal" tabindex="-1" aria-labelledby="deleteLeadModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/leads/<%= lead._id %>/delete" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteLeadModalLabel">Delete Lead</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this lead? This action cannot be undone.</p>
          <div class="alert alert-danger">
            <strong>Warning:</strong> All notes and follow-up data associated with this lead will be permanently deleted.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Delete Lead</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Fix for all modals to ensure they work properly
    const updateStatusModal = new bootstrap.Modal(document.getElementById('updateStatusModal'));
    const assignSellerModal = new bootstrap.Modal(document.getElementById('assignSellerModal'));
    const deleteLeadModal = new bootstrap.Modal(document.getElementById('deleteLeadModal'));
    
    // Fix for dropdown menu links to properly trigger modals
    document.querySelectorAll('.dropdown-item').forEach(item => {
      item.addEventListener('click', function(e) {
        const target = this.getAttribute('data-bs-target');
        if (target === '#updateStatusModal') {
          updateStatusModal.show();
        } else if (target === '#assignSellerModal') {
          assignSellerModal.show();
        } else if (target === '#deleteLeadModal') {
          deleteLeadModal.show();
        }
      });
    });
    
    // Fix for status update form submission
    document.querySelector('#updateStatusModal form').addEventListener('submit', function(e) {
      e.preventDefault();
      const form = this;
      const formData = new FormData(form);
      
      fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => {
        if (response.ok) {
          window.location.reload();
        } else {
          throw new Error('Error updating status');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error updating status. Please try again.');
      });
    });
    
    // Fix for assign seller form submission
    document.querySelector('#assignSellerModal form').addEventListener('submit', function(e) {
      e.preventDefault();
      const form = this;
      const formData = new FormData(form);
      
      fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => {
        if (response.ok) {
          window.location.reload();
        } else {
          throw new Error('Error assigning seller');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error assigning seller. Please try again.');
      });
    });
    
    // Fix for delete lead form submission
    document.querySelector('#deleteLeadModal form').addEventListener('submit', function(e) {
      e.preventDefault();
      const form = this;
      
      fetch(form.action, {
        method: 'POST',
        headers: {
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => {
        if (response.ok) {
          window.location.href = '/admin/leads';
        } else {
          throw new Error('Error deleting lead');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error deleting lead. Please try again.');
      });
    });

    // Load sellers dynamically when the button is clicked
    document.getElementById('loadSellersBtn').addEventListener('click', function(e) {
      e.preventDefault();
      
      // Show loading state
      this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Loading...';
      
      // Fetch sellers via AJAX
      fetch('/admin/api/sellers')
        .then(response => response.json())
        .then(data => {
          const sellersSelect = document.getElementById('sellerId');
          const currentSeller = sellersSelect.dataset.currentSeller;
          
          // Keep the unassign option
          sellersSelect.innerHTML = '<option value="">-- Unassign --</option>';
          
          // Add all sellers
          data.forEach(seller => {
            const option = document.createElement('option');
            option.value = seller._id;
            option.textContent = `${seller.name} (${seller.email})`;
            
            // Check if this seller is currently assigned
            if (currentSeller === seller._id) {
              option.selected = true;
            }
            
            sellersSelect.appendChild(option);
          });
          
          // Reset button
          this.innerHTML = '<i class="fas fa-sync me-1"></i> Refresh Sellers';
        })
        .catch(error => {
          console.error('Error loading sellers:', error);
          // Reset button with error state
          this.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i> Error! Try Again';
        });
    });
    
    // Add analysis feature if it doesn't exist
    const dropdownMenu = document.querySelector('.dropdown-menu');
    if (dropdownMenu && !document.querySelector('a[data-bs-target="#analysisModal"]')) {
      const analyzeLink = document.createElement('a');
      analyzeLink.className = 'dropdown-item';
      analyzeLink.href = '#';
      analyzeLink.setAttribute('data-bs-toggle', 'modal');
      analyzeLink.setAttribute('data-bs-target', '#analysisModal');
      analyzeLink.textContent = 'Analysis';
      
      // Insert after "Assign Seller" and before the divider
      const divider = dropdownMenu.querySelector('.dropdown-divider');
      if (divider) {
        dropdownMenu.insertBefore(analyzeLink, divider);
      } else {
        dropdownMenu.appendChild(analyzeLink);
      }
    }
  });
</script>

